{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      // modify jest.config.js also
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@middlewares/*": ["middlewares/*"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@httpErrors/*": ["httpErrors/*"],
      "@httpErrors": ["httpErrors/index"],
      "@interfaces/*": ["interfaces/*"],
      "@config/*": ["config/*"]
    },
    "outDir": "build",
    "rootDir": "src/",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true
  }
}
