{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      // modify jest.config.js also
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@middlewares/*": ["middlewares/*"],
      "@passport/*": ["passport/*"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@httpErrors": ["httpErrors/index"],
      "@httpErrors/*": ["httpErrors/*"],
      // "@types/*": ["types/*"],
      "@config/*": ["config/*"]
    },
    "esModuleInterop": true,
    "allowJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "CommonJS",
    "strict": true
  }
}
