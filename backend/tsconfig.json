{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@middlewares/*": ["middlewares/*"],
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@error-handler/*": ["error-handler/*"],
      "@interfaces/*": ["interfaces/*"],
      "@config/*": ["config/*"]
    },

    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true
  }
}
