{
  "name": "my-pocket",
  "version": "1.0.0",
  "description": "Easy to use money wallet",
  "private": true,
  "workspaces": [
    "apps/*",
    "pkgs/*",
    "conf/*"
  ],
  "scripts": {
    "commit": "turbo --version && git commit",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "prettier --write . && turbo run lint ",
    "typecheck": "turbo run typecheck",
    "prettier": "prettier --write .",
    "test": "turbo run test",
    "prepare": "husky install",
    "do-deploy:get": "doctl apps spec get f898aa0c-2753-4936-89a1-4d2ee45d2869 > do_app_spec.yaml",
    "do-deploy:upload": "doctl apps update f898aa0c-2753-4936-89a1-4d2ee45d2869 --spec do_app_spec_prod.yaml"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "latest",
    "turbo": "latest"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=8.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karambarakat/MoneyTracker.git"
  },
  "author": "Karam Barakat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/karambarakat/MoneyTracker/issues"
  },
  "homepage": "https://github.com/karambarakat/MoneyTracker#readme",
  "packageManager": "pnpm@8.6.0"
}
