{
  "name": "my-pocket",
  "version": "0.0.0",
  "description": "Easy to use money wallet",
  "private": true,
  "workspaces": [
    "apps/*",
    "pkgs/*"
  ],
  "scripts": {
    "commit": "turbo --version && git commit",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "prettier --write . && turbo run lint ",
    "typecheck": "turbo run typecheck",
    "prettier": "prettier --write .",
    "test": "turbo run test",
    "// e2e": "used for development, see ./.github/workflows/e2e.yaml",
    "e2e:dep": "concurrently \"pnpm --filter backend run e2e\" \"pnpm --filter frontend run e2e\"",
    "e2e:clean": "pnpm --filter backend e2e:clean",
    "e2e:codegen": "pnpm --filter e2e codegen",
    "e2e": "pnpm e2e:clean && pnpm --filter e2e e2e",
    "prepare": "husky install",
    "do-deploy:get": "doctl apps spec get f898aa0c-2753-4936-89a1-4d2ee45d2869 > do_app_spec.yaml",
    "do-deploy:upload": "doctl apps update f898aa0c-2753-4936-89a1-4d2ee45d2869 --spec do_app_spec.local.yaml"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "latest",
    "turbo": "latest"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=8.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karambarakat/MoneyTracker.git"
  },
  "author": "Karam Barakat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/karambarakat/MoneyTracker/issues"
  },
  "homepage": "https://github.com/karambarakat/MoneyTracker#readme",
  "packageManager": "pnpm@8.6.0"
}
