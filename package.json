{
  "name": "my-pocket",
  "version": "0.0.0",
  "description": "Easy to use money wallet",
  "private": true,
  "workspaces": [
    "apps/*",
    "pkgs/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:all": "pnpm -F backend -F frontend --parallel dev",
    "lint": "prettier --write . && turbo run lint ",
    "typecheck": "turbo run typecheck",
    "prettier": "prettier --write .",
    "test": "turbo run test",
    "// e2e 1.build": "build of dependencies `frontend` and `backend`",
    "// e2e 2.e2e:bg": "run persistent background processes on ports 5333 and 8088",
    "// e2e 3.e2e:clean": "run e2e:clean before each test run",
    "// e2e 4.e2e": "in another thread/terminal run the e2e tests",
    "e2e:pre": "turbo -F frontend -F backend -F e2e e2e:pre",
    "e2e:bg": "pnpm -r --parallel run e2e:bg",
    "e2e:run": "pnpm -r --parallel run e2e:clean && wait-on -t 60000 http://localhost:5333 && wait-on -t 60000 tcp:8088 && pnpm --filter e2e run e2e",
    "// there are used for development": "pnpm e2e-dev test || pnpm e2e-dev test --ui || pnpm e2e-dev codegen",
    "e2e-dev": "pnpm -r run e2e:clean && pnpm -F e2e run playwright",
    "e2e-run": "pnpm -F e2e playwright test --ui",
    "e2e-codegen": "pnpm --filter e2e codegen",
    "e2e-cicd": "concurrently -n \"bg,e2e\" -c \"green,bgBlue.bold\" -s first --kill-others \"pnpm e2e:bg\" \"sleep 6 && pnpm e2e:run\"",
    "// deploy": "manual deployment to digital ocean, secrets are stored in do_app_spec.local.yaml, do-deploy:get will download encrypted secrets",
    "// todo": "automated deployment required",
    "do-deploy:get": "doctl apps spec get f898aa0c-2753-4936-89a1-4d2ee45d2869 > do_app_spec.yaml",
    "do-deploy:upload": "doctl apps update f898aa0c-2753-4936-89a1-4d2ee45d2869 --spec do_app_spec.local.yaml"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "latest",
    "turbo": "latest"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=8.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karambarakat/MoneyTracker.git"
  },
  "author": "Karam Barakat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/karambarakat/MoneyTracker/issues"
  },
  "homepage": "https://github.com/karambarakat/MoneyTracker#readme",
  "packageManager": "pnpm@8.6.0",
  "pnpm": {
    "patchedDependencies": {
      "twin.macro@3.3.1": "patches/twin.macro@3.3.1.patch",
      "@types/json-schema@7.0.12": "patches/@types__json-schema@7.0.12.patch"
    }
  }
}
