{
  "tailwindCSS.experimental.classRegex": [
    "tw`([^`]*)", // tw`...`
    "tw=\"([^\"]*)", // <div tw="..." />
    "tw={\"([^\"}]*)", // <div tw={"..."} />
    "tw\\.\\w+`([^`]*)", // tw.xxx`...`
    "tw\\(.*?\\)`([^`]*)" // tw(Component)`...`
  ],
  "editor.tabSize": 2,
  "cSpell.minWordLength": 5,
  "cSpell.words": [
    "autodocs",
    "cmnd",
    "codegen",
    "elems",
    "hoverable",
    "karam",
    "karambarakat",
    "localstorage",
    "openapi",
    "signup",
    "tabler",
    "tailwindcss",
    "tanstack",
    "TCICD",
    "Turborepo",
    "typecheck",
    "viewports"
  ],
  "eslint.options": {
    "extensions": [".js", ".jsx", ".md", ".mdx", ".ts", ".tsx"]
  },
  "eslint.validate": [
    "markdown",
    "mdx",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}
